{
    "name": "react-async-storage",
    "version": "1.0.0",
    "description": "Typescript enabled async storage for React and React Native",
    "keywords": [
        "async",
        "AsyncCache",
        "asyncCache",
        "AsyncStorage",
        "asyncStorage",
        "cache",
        "localforage",
        "localStorage",
        "react-native",
        "react",
        "storage"
    ],
    "files": [
        "dist"
    ],
    "readme": "README.md",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "browser": {
        "./dist/cjs/index.js": "./dist/umd/index.js",
        "./dist/esm/index.js": "./dist/esm/index.js"
    },
    "unpkg": "dist/umd/index.min.js",
    "types": "dist/types/index.d.ts",
    "scripts": {
        "build": "rimraf dist && rollup -c rollup.config.js && prettier --write './dist/**/*.ts'",
        "check:script": "eslint --fix-dry-run '**/*.{ts,tsx,*.ts,*.tsx}'",
        "contributors:add": "all-contributors add",
        "contributors:generate": "all-contributors generate",
        "lint:script": "eslint --fix '**/*.{ts,tsx,*.ts,*.tsx}'",
        "postpublish": "rimraf dist",
        "prepublishOnly": "yarn build",
        "test": "jest --silent"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,md,json,yml,yaml}": [
            "prettier --write"
        ],
        "*.{ts,tsx}": [
            "eslint --fix"
        ]
    },
    "author": {
        "name": "Na'aman Hirschfeld",
        "email": "nhirschfeld@gmail.com",
        "url": "https://github.com/Goldziher"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git@github.com:react-async-storage/react-async-storage.git"
    },
    "bugs": {
        "url": "https://github.com/react-async-storage/react-async-storage/issues"
    },
    "homepage": "https://github.com/react-async-storage/react-async-storage#readme",
    "devDependencies": {
        "@babel/core": "^7.12.9",
        "@babel/plugin-transform-runtime": "^7.12.1",
        "@jest/types": "^26.6.2",
        "@react-native-community/async-storage": "^1.12.1",
        "@rollup/plugin-babel": "^5.2.2",
        "@rollup/plugin-commonjs": "^17.0.0",
        "@rollup/plugin-node-resolve": "^11.0.0",
        "@sprylab/eslint-config": "^1.1.5",
        "@testing-library/jest-dom": "^5.11.6",
        "@testing-library/react": "^11.2.2",
        "@testing-library/react-hooks": "^3.5.0",
        "@types/lodash.merge": "^4.6.6",
        "@types/react": "^17.0.0",
        "all-contributors-cli": "^6.19.0",
        "eslint": "^7.15.0",
        "husky": "^4.3.5",
        "jest": "^26.6.3",
        "lint-staged": "^10.5.3",
        "localforage": "^1.9.0",
        "prettier": "^2.2.1",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-test-renderer": "^17.0.1",
        "rimraf": "^3.0.2",
        "rollup": "^2.34.2",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.29.0",
        "ts-jest": "^26.4.4",
        "tslib": "^2.0.3",
        "typescript": "^4.1.2"
    },
    "peerDependencies": {
        "localforage": "*",
        "react": "*"
    },
    "optionalDependencies": {
        "@react-native-community/async-storage": "*",
        "react-native": "*"
    },
    "dependencies": {
        "@aveq-research/localforage-asyncstorage-driver": "^2.0.0",
        "compare-versions": "^3.6.0",
        "lodash.merge": "^4.6.2"
    }
}
